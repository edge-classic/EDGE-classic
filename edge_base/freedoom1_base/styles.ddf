<STYLES>

#VERSION 1.30

[MENU] //default style for menu
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=30%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="EDGE1";
TEXT.SCALE=1.0;
TEXT.COLOURMAP="TEXT_RED";


[CHOOSE_SKILL] //New game/Choose Skill
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=1.1;
HEADER.COLOURMAP="TEXT_RED";
TITLE.FONT="EDGE1"; //"New Game"
TITLE.SCALE=1.0;
TITLE.COLOURMAP="TEXT_RED";
ALT.FONT="EDGE1";  // "Choose Skill"
ALT.SCALE=0.9;
ALT.COLOURMAP="TEXT_BLUE";
TEXT.FONT="EDGE1"; //"I'm too young to die" etc.;
TEXT.SCALE=0.8;
TEXT.COLOURMAP="TEXT_RED";


[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=1.1;
HEADER.COLOURMAP="TEXT_RED";
TITLE.FONT="EDGE1"; //"Which Episode?"
TITLE.SCALE=1.0;
TITLE.COLOURMAP="TEXT_RED";
TEXT.FONT="EDGE1"; //"Knee deep in the dead" etc.;
TEXT.SCALE=0.9;
TEXT.COLOURMAP="TEXT_RED";


[LOAD_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=0.9;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=0.9;
TEXT.FONT="DOOM";
ALT.FONT="DOOM"; // when we edit the save name
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[OPTIONS] //all the other option menus
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //header
HEADER.SCALE=1.1;
HEADER.COLOURMAP="TEXT_RED";
TEXT.FONT="EDGE3"; //items
TEXT.SCALE=1.0;
TEXT.COLOURMAP="TEXT_RED";
ALT.FONT="EDGE3"; //values / slider chars
ALT.SCALE=1.0;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="EDGE3"; //Selected text
TITLE.SCALE=1.02;
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_GREEN";


[STATS] //INTERMISSION Finished/Entering level screen
TITLE.FONT="EDGE1";//Finished/Entering text
TITLE.SCALE=0.8;
TEXT.FONT="EDGE1";//map name/description
TEXT.COLOURMAP="TEXT_WHITE";
TEXT.SCALE=0.7;
ALT.FONT="EDGE1"; // par times
ALT.SCALE=0.85;


[CONSOLE]
BACKGROUND.COLOUR=#141414;
BACKGROUND.TRANSLUCENCY=85%;
BACKGROUND.IMAGE=EDGECBG1;


[INTERLEVEL_TEXT] //Pre/End texts on certain INTERMISSION screens
TEXT.FONT="DOOM";//map description
//TEXT.COLOURMAP="TEXT_GREEN";
TEXT.SCALE=1.0;


[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
HEADER.SCALE=3; //Affects size of monster cast sprites
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_YELLOW";


[MESSAGES] // "you picked up a clip" etc
