<WEAPONS>
#CLEARALL


[PISTOL]
AMMOTYPE=NOAMMO;//BULLETS;
AMMOPERSHOT = 1;
AUTOMATIC = TRUE;
BINDKEY = 2;
PRIORITY = 2;
FREE = TRUE;
REFIRE_INACCURATE = TRUE;

STATES(UP) =
    PISG:A:1:NORMAL:RAISE;

STATES(DOWN) =
    PISG:A:1:NORMAL:LOWER;

STATES(READY) =
    PISG:A:1:NORMAL:READY;

STATES(ATTACK) =
    PISG:A:4:NORMAL:NOTHING,
    PISG:B:15:NORMAL:SHOOT,
    PISG:C:6:NORMAL:NOTHING,
    PISG:B:6:NORMAL:REFIRE,#READY;

STATES(FLASH) =
    PISF:A:7:BRIGHT:LIGHT1,
    SHTG:E:0:NORMAL:LIGHT0,#REMOVE;

ATTACK = PLAYER_PLASMA;

[SHOTGUN]
