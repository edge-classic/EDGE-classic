    SHTG:A:1:NORMAL:RAISE;

STATES(DOWN) =
    SHTG:A:1:NORMAL:LOWER;

STATES(READY) =
    SHTG:A:1:NORMAL:READY;

STATES(ATTACK) =
    SHTG:A:3:NORMAL:NOTHING,
    SHTG:A:7:NORMAL:SHOOT,
    SHTG:B:5:NORMAL:NOTHING,
    SHTG:C:5:NORMAL:NOTHING,
    SHTG:D:4:NORMAL:NOTHING,
    SHTG:C:0:NORMAL:PLAYSOUND(DBOPN),
    SHTG:C:5:NORMAL:NOTHING,
    SHTG:B:5:NORMAL:NOTHING,
    SHTG:A:3:NORMAL:NOTHING,
    SHTG:A:7:NORMAL:REFIRE,#READY;

STATES(FLASH) =
    SHTF:A:4:BRIGHT:LIGHT1,
    SHTF:B:3:BRIGHT:LIGHT2,
    SHTG:E:0:NORMAL:LIGHT0,#REMOVE;

ATTACK = PLAYER_SHOTGUN;

[CHAINGUN]
AMMOTYPE = BULLETS;
AMMOPERSHOT = 1;
AUTOMATIC = TRUE;
BINDKEY = 4;
PRIORITY = 5;
