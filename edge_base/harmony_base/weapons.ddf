    MISF:A:6:BRIGHT:LIGHT1,
    PUNG:B:6:BRIGHT:LIGHT2,
    MISF:B:8:BRIGHT:NOTHING,
    MISF:C:8:BRIGHT:LIGHT2,
    MISF:D:8:BRIGHT:LIGHT2,
    SHTG:E:0:NORMAL:LIGHT0,#REMOVE;

