<FONTS>

#VERSION 1.30

[EDGE3] //font used for the options menus
TYPE=TRUETYPE;
TTF="ECFONT03.ttf";
TTF_SMOOTHING = "ALWAYS";

[DOOM]
TYPE=PATCH;
PATCHES=FONTA01("!":"Z"),FONTA59("_"),FONTA31("?");

[MENU]
TYPE=PATCH;
PATCHES=MENFN033("!":"_"),MENFN121("|"),
          MENFN132("?"),MENFN134("?"),MENFN148("?");  // FIXME: charset
MISSING_PATCH="MENFN000";

[HERETIC]
TYPE=PATCH;
PATCHES=FONTA01("!":"Z"),FONTA59("_"),FONTA31("?");

[HERETIC_BIG]
TYPE=PATCH;
PATCHES=FONTB01("!":"Z"),FONTB58("_"),FONTB31("?");
MISSING_PATCH="=";

[HERETIC_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9");

[HERETIC_LITTLE]
TYPE=PATCH;
PATCHES=SMALLIN0("0":"9");

[BIG_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9"),NEGNUM("-"),STTPRCNT("%");

[STAT_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9"),WIMINUS("-"),WIPCNT("%"),WICOLON(":");

[GREY_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9");

[YELLOW_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9");

[AUTOMAP_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9");


 
 
 
 
 
 
 
 
 
