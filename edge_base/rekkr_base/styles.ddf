<STYLES>

#VERSION 1.10

[DIALOG] //exit EDGE message
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
TITLE.FONT="DOOM";


[MENU] //default style for menu
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=30%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="EDGE1";
TEXT.SCALE=1.0;
ENTRY_SPACING = 5;
Y_OFFSET = -10;

[CHOOSE_SKILL]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TITLE.FONT="EDGE1";
TITLE.SCALE=1.0;
TEXT.FONT="EDGE1"; //"DOOM";
TEXT.SCALE=0.9;

[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
X_OFFSET=44;
Y_OFFSET=-1;
ENTRY_SPACING = 2;
CURSOR.IMAGE="M_SKULL3";

[LOAD_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";

[SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[OPTIONS] //all the other option menus
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="EDGE3"; //items and header
TEXT.SCALE=1.0;
TEXT.COLOURMAP="TEXT_GREY";
ALT.FONT="EDGE3"; //values
ALT.SCALE=1.0;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="EDGE3"; //Selected text
TITLE.SCALE=1.02;
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW";

[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //items
HEADER.COLOURMAP="TEXT_GREY";
HEADER.SCALE=1.25;
TEXT.FONT="EDGE3"; //items
TEXT.COLOURMAP="TEXT_GREY";
ALT.FONT="EDGE3"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="EDGE3"; //Selected text
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW"; //"TEXT_GREEN";


[STATS] //INTERMISSION Finished/Entering level screen
TITLE.FONT="EDGE1";//Finished/Entering text
TITLE.SCALE=0.8;
TEXT.FONT="EDGE1";//map name/description
TEXT.COLOURMAP="TEXT_WHITE";
TEXT.SCALE=0.7;
ALT.FONT="EDGE1"; // par times


[INTERLEVEL_TEXT] //Pre/End texts on certain INTERMISSION screens
TEXT.FONT="DOOM";//map description
//TEXT.COLOURMAP="TEXT_GREEN";
TEXT.SCALE=1.0;


[DEFAULT]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
//SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
TITLE.FONT="DOOM";
HELP.FONT="DOOM";


[MESSAGES]
TEXT.FONT="DOOM";

[CHAT]
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_GREEN";

[AUTOMAP]
//BACKGROUND.COLOUR=#000000;
TEXT.FONT="DOOM";
ALT.FONT="AUTOMAP_DIGIT";

[NET_STATS]
TITLE.FONT="DOOM";
// leave title as red
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="DOOM";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";


[RTS_TIP]
TEXT.FONT="DOOM";

[CONSOLE]
BACKGROUND.COLOUR=#141414;
BACKGROUND.TRANSLUCENCY=85%;
BACKGROUND.IMAGE=EDGECBG1;

[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_YELLOW";



 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
